- if user_signed_in?
  - if project.like_user(current_user.id)
    = button_to project_like_path(project, like), method: :delete, class: "btn btn-default decrement-button", remote: true do
      = image_tag("icon_heart_red.svg")
      Like
      %span.num
        = project.likes_count
  -else
    = button_to project_likes_path(project), class: "btn btn-default", method: :post, remote: true do
      = image_tag("icon_heart.svg")
      Like
      %span.num= project.likes_count
