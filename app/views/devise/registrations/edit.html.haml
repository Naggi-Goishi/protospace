= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "container user-new"}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row
          .user-name.col-md-10
            = f.text_area :name
          .user-image.col-md-2{:style => "background-image: url();"}
            %button.btn.btn-primary Change image
            = f.file_field :avator
        = f.email_field :email, autofocus: true, id: "user_email", class: "user-email"
        = f.password_field :password, autocomplete: "off", id: "user_pasword", class: "user-password", placeholder: "password"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_area :member, id: "user_group"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, id: "Profile"
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :job, id: "user_work"
    .row.text-center.user-btn
      = f.submit "Save", class: "btn btn-lg btn-primary btn-block"
