.container.user-page
  %header.user-nav
    .media
      .media-left
        =link_to image_tag("#{@user.avator}", class: :"media-object", alt: :"64x64", :"data-holder-rendered" => "true", :"data-src" => "holder.js/64x64", style: :"width: 64px; height: 64px;"), "#"
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            #{@user.projects.count}
            %i Projects
        .proto-user
          %span.degree #{@user.member}
        .row
          .col-md-6
            %h4 Profile
            %p #{@user.profile}
          .col-md-6
            %h4 Works
            %p #{@user.job}
.container.proto-list
  .row
    = render partial: "projects/project", collection: @user.projects
